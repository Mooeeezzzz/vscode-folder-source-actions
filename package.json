{
    "name": "folder-source-actions",
    "displayName": "folder-source-actions",
    "description": "Apply organize imports to all files in a folder",
    "version": "0.0.1",
    "publisher": "bierner",
    "engines": {
        "vscode": "^1.26.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:folderSourceActions.organizeImports"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "folderSourceActions.organizeImports",
                "title": "Organize imports in folder"
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "command": "folderSourceActions.organizeImports",
                    "when": "explorerResourceIsFolder"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "typescript": "^2.9.2",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}